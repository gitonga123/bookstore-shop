{% extends 'layout.twig' %}

{% block title %}
    Sale {{ sale.title }}
{% endblock %}

{% block content %}
    <div class="container">
        <table class="table table-condensed">
            <thead>
                <th>Title</th>
                <th>Author</th>
                <th>Amount</th>
                <th>Price</th>
                <th></th>
            </thead>
            <tbody>
                {% for book in sale.books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.stock }}</td>
                        <td>{{ (book.price * book.stock)|number_format(2) }}</td>
                        <td><a hre="/book/{{ book.id }}"><i class="far fa-eye"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}